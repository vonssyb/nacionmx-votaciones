{
    "name": "nacionmx-bot",
    "version": "1.0.0",
    "description": "Discord Bot for Nacion MX RP Portal integration",
    "main": "index_unified.js",
    "scripts": {
        "start": "node index_unified.js",
        "dev": "nodemon index_unified.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "deploy:local": "node deploy-commands-local.js",
        "deploy:mod": "node register_moderacion.js",
        "deploy:eco": "node register_economia.js",
        "deploy:gov": "node register_gobierno.js",
        "legacy:gov": "node legacy/index_gobierno.js",
        "legacy:eco": "node legacy/index_economia.js",
        "legacy:mod": "node legacy/index_moderacion.js"
    },
    "dependencies": {
        "@discordjs/voice": "0.18.0",
        "@google/generative-ai": "^0.24.1",
        "@napi-rs/canvas": "^0.1.88",
        "@supabase/supabase-js": "^2.88.0",
        "axios": "^1.13.2",
        "discord-html-transcripts": "^3.2.0",
        "discord-tts": "^1.2.2",
        "discord.js": "^14.25.1",
        "dotenv": "^16.6.1",
        "express": "^4.22.1",
        "ffmpeg-static": "^5.3.0",
        "groq-sdk": "^0.37.0",
        "moment-timezone": "^0.6.0",
        "node-cache": "^5.1.2",
        "node-cron": "^4.2.1",
        "openai": "^6.16.0",
        "replicate": "^1.4.0",
        "sodium-native": "^5.0.10",
        "winston": "^3.19.0",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "jest": "^29.7.0"
    },
    "jest": {
        "testEnvironment": "node",
        "coverageDirectory": "./coverage",
        "collectCoverageFrom": [
            "commands/**/*.js",
            "handlers/**/*.js",
            "services/**/*.js",
            "utils/**/*.js",
            "!**/node_modules/**",
            "!**/legacy/**"
        ],
        "testMatch": [
            "**/__tests__/**/*.js",
            "**/?(*.)+(spec|test).js"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/tests/setup.js"
        ]
    }
}